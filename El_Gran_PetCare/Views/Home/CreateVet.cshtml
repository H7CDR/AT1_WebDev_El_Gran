@model El_Gran_PetCare.Models.VetClass

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="w-50 p-4 bg-light shadow rounded">
            <h2 class="text-center mb-4" style="color: #00627D; font-family: Tahoma, sans-serif;">Create Vet</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="row mb-3">
                @Html.LabelFor(model => model.vetID, "Vet ID", htmlAttributes: new { @class = "col-sm-3 col-form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.vetID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.vetID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.vetName, "Name", htmlAttributes: new { @class = "col-sm-3 col-form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.vetName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.vetName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.vetSpecialisation, "Specialization", htmlAttributes: new { @class = "col-sm-3 col-form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.vetSpecialisation, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.vetSpecialisation, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-9 offset-sm-3">
                    <input type="submit" value="Create" class="btn btn-primary" style="background-color: #11BCC3; border-color: #11BCC3;" />
                </div>
            </div>
        </div>
    </div>
}

<div class="mt-4 text-center">
    @Html.ActionLink("Back to List", "VetIndex", null, new { @class = "btn btn-secondary", @style = "background-color: #00627D; color: #d3d3d3;" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
