@model El_Gran_PetCare.Models.PetClass

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="w-50 p-4 bg-light shadow rounded">
            <h2 class="text-center mb-4" style="color: #00627D; font-family: Tahoma, sans-serif;">Create Pet</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="row mb-3">
                @Html.LabelFor(model => model.petID, "Pet ID", htmlAttributes: new { @class = "col-sm-3 col-form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.petID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.petID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.petName, "Pet Name", htmlAttributes: new { @class = "col-sm-3 col-form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.petName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.petName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.petSpecies, "Species", htmlAttributes: new { @class = "col-sm-3 col-form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.petSpecies, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.petSpecies, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.petBreed, "Breed", htmlAttributes: new { @class = "col-sm-3 col-form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.petBreed, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.petBreed, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.petGender, "Gender", htmlAttributes: new { @class = "col-sm-3 col-form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                <div class="col-sm-9 d-flex align-items-center">
                    @Html.RadioButtonFor(model => model.petGender, "Male", new { @class = "form-check-input", id = "Male" })
                    <label class="form-check-label me-3" for="Male" style="margin-left: 5px;">Male</label>

                    @Html.RadioButtonFor(model => model.petGender, "Female", new { @class = "form-check-input", id = "Female" })
                    <label class="form-check-label" for="Female" style="margin-left: 5px;">Female</label>
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.petAge, "Age", htmlAttributes: new { @class = "col-sm-3 col-form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.petAge, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.petAge, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.ownerID, "Owner ID", htmlAttributes: new { @class = "col-sm-3 col-form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.ownerID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ownerID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-9 offset-sm-3">
                    <input type="submit" value="Create" class="btn btn-primary" style="background-color: #11BCC3; border-color: #11BCC3;" />
                </div>
            </div>
        </div>
    </div>
}

<div class="mt-4 text-center">
    @Html.ActionLink("Back to List", "PetIndex", null, new { @class = "btn btn-secondary", @style = "background-color: #00627D; color: #d3d3d3;" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
