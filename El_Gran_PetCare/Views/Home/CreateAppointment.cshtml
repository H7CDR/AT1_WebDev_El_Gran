@model El_Gran_PetCare.Models.AppointmentModels

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow p-4" style="width: 50%;">
            <h2 class="text-center mb-4" style="color: #00627D; font-family: Tahoma, sans-serif;">Create Appointment</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.ownerID, "Owner ID", htmlAttributes: new { @class = "form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                @Html.EditorFor(model => model.ownerID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ownerID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.petID, "Pet ID", htmlAttributes: new { @class = "form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                @Html.EditorFor(model => model.petID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.petID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.vetID, "Vet ID", htmlAttributes: new { @class = "form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                @Html.EditorFor(model => model.vetID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vetID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.appointmentDate, "Select Appointment Date", htmlAttributes: new { @class = "form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                @Html.EditorFor(model => model.appointmentDate, new { htmlAttributes = new { @class = "form-control", @type = "date", @min = DateTime.Now.ToString("yyyy-MM-dd") } })
                @Html.ValidationMessageFor(model => model.appointmentDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.appointmentReason, "Reason for Appointment", htmlAttributes: new { @class = "form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                @Html.TextAreaFor(model => model.appointmentReason, new { @class = "form-control", rows = 3 })
                @Html.ValidationMessageFor(model => model.appointmentReason, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.appointmentNote, "Other Notes", htmlAttributes: new { @class = "form-label", @style = "color: #00627D; font-family: Verdana, sans-serif;" })
                @Html.TextAreaFor(model => model.appointmentNote, new { @class = "form-control", rows = 3 })
                @Html.ValidationMessageFor(model => model.appointmentNote, "", new { @class = "text-danger" })
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary" style="background-color: #11BCC3; border-color: #11BCC3;" />
            </div>
        </div>
    </div>
}

<div class="mt-4 text-center">
    @Html.ActionLink("Back to List", "AppointmentIndex", null, new { @class = "btn btn-secondary", @style = "background-color: #00627D; color: #d3d3d3;" })
</div>
