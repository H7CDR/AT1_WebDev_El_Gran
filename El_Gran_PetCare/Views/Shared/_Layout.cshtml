<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - El Gran Pet Care</title>
    <link rel="stylesheet" href="~/Content/layoutCss.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        html, body {
            height: 100%;
        }

        .wrapper {
            min-height: 100%;
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1;
        }

        .navbar, .footer {
            background-color: #00627D !important;
        }

        .navbar .nav-link, .footer p {
            color: #ffffff !important;
        }

        .navbar .nav-link:hover {
            color: #d3d3d3 !important;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="content">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
                <div class="container-fluid d-flex justify-content-between">
                    <div><a href="@Url.Action("Index", "Home")"><img src="~/Content/img/1.png" width="80" height="80" style="cursor:pointer;border:1px solid transparent; border-radius:20px" alt="Logo" /></a></div>
                    <div><h1 style="color:#fff;">EL GRAN PET CARE</h1></div>
                    <div><img src="~/Content/img/1.png" width="80" height="80" style="border:1px solid transparent; border-radius:20px; opacity:0;" alt="" /></div>
                </div>
            </nav>
            <nav class="navbar navbar-expand-md navbar-toggleable-sm navbar-dark mt-0">
                <div class="container-fluid px-0">
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse d-md-inline-flex justify-content-evenly">
                        <ul class="nav nav-justified">
                            <li class="nav-item me-sm-5">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item me-sm-5">@Html.ActionLink("Appointment", "AppointmentIndex", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item me-sm-5">@Html.ActionLink("Vet", "VetIndex", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item me-sm-5">@Html.ActionLink("Owner", "OwnerIndex", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item me-sm-5">@Html.ActionLink("Pet", "PetIndex", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item me-sm-5">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item me-sm-5">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div style="margin: 0" class="container-fluid body-content px-0 py-0">
                @RenderBody()
                <hr />
            </div>
        </div>
        <footer class="footer text-light mt-auto py-4">
            <div class="row text-center">
                <div class="col-md-12">
                    <p class="mb-0">&copy; @DateTime.Now.Year El Gran Pet Care. All rights reserved.</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
